@inject SignInManager<AppUser> SignInManager;

<!DOCTYPE html>

<html>
<head>
	<environment include="Development">
		<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" 
		      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css" 
		      integrity="sha384-VCmXjywReHh4PwowAiWNagnWcLhlEJLA5buUprzK8rxFgeH0kww/aWY76TfkUoSX" 
		      crossorigin="anonymous"
		      asp-fallback-href="~/wwwroot/lib/bootstrap/css/bootstrap.min.css"
		      asp-fallback-test-class="sr-only"
		      asp-fallback-test-property="position"
		      asp-fallback-test-value="absolute"
		      asp-suppress-fallback-integrity="true">
	</environment>
	<meta name="viewport" content="width=device-width"/>
	<title>@ViewBag.Title</title>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="False" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarTogglerDemo01">
			<a class="navbar-brand" asp-controller="Home" asp-action="Index">IRP</a>
			<ul class="navbar-nav mr-auto mt-2 mt-lg-0">

				<li class="nav-item active">
					<a class="nav-link" href="/Laptops/List/">All</a>
				</li>
				<li class="nav-item dropdown active">
					<a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="True">
						Category
					</a>
					<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
						<li><a class="dropdown-item" href="/Laptops/List/xiaomi">Laptops</a></li>
						<li><a class="dropdown-item" href="/Laptops/List/apple">Cameras</a></li>
						<li><a class="dropdown-item" href="/Laptops/List/asus">Smartphones</a></li>
					</ul>
				</li>
			</ul>
			@if (SignInManager.IsSignedIn(User))
			{
				<form class="form-inline my-2 my-lg-0 m-1">
					<button class="btn btn-outline-success my-2 my-sm-1" type="submit" asp-controller="Auth" asp-action="Logout">Logout @User.Identity.Name</button>
				</form>
			}
			else
			{
				<form class="form-inline my-2 my-lg-0 m-1">
					<button class="btn btn-outline-success my-2 my-sm-1" type="submit" asp-controller="Auth" asp-action="Register">Sign Up</button>
				</form>

				<form class="form-inline my-2 my-lg-0 m-1">
					<button class="btn btn-outline-success my-2 my-sm-1" type="submit" asp-controller="Auth" asp-action="SignIn">Sign In</button>
				</form>
			}

			<form class="form-inline my-2 my-lg-0 m-1">
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit" asp-controller="ShopCart" asp-action="GetCartItems">Cart</button>
			</form>
		</div>
	</nav>
	<div>
		@RenderBody()
	</div>
	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
