@model Product

<div class=" col-lg-4" id="product">
	<p class="heading">@Model.Brand @Model.Model</p>
	<p>Price: @Model.Price.ToString("C")</p>
	<p> Items left: @Model.AmountAvailable</p>
	<p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id ="@Model.ProductId ">Add to Cart</a></p>
</div>