@model Order

<div class="mt-5">
<h1>Finish order</h1>
<form asp-action="CheckOut" method="post" class="form-text">
	<div class="col-md-5">
		<label asp-for="FirstName"></label>
		<input asp-for="FirstName" class="form-control"/>
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
        
	<div class="col-md-5 mb-3">
		<label asp-for="LastName"></label>
		<input asp-for="LastName" class="form-control"/>
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
        
	<div class="col-md-5 mb-3">
		<label asp-for="PhoneNumber"></label>
		<input asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>
        
	<div class="col-md-5 mb-3">
		<label asp-for="UserAddress"></label>
		<input asp-for="UserAddress" class="form-control" />
		<span asp-validation-for="UserAddress" class="text-danger"></span>
	</div>
        
	<div class="col-md-5 mb-3">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="col-md-3">
		<input class="btn btn-success" type="submit" value="Finish order"/>
	</div>
</form>
</div>