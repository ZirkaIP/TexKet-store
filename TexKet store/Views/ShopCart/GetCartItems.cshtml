@model ShopCartViewModel

<div class="container">
    
	@if (Model.Cart.ToPayList.Count == 0)
	{
		<h2>Cart is empty</h2>
	}

	@foreach (var el in Model.Cart.ToPayList)

	{
		<div class="alert alert-warning mt-3">
			<b>@el.Product.Brand</b>
			<b> @el.Product.Model,</b>
			<b>Price: @el.Product.Price</b>
		</div>

	}
	<hr/>
	<a class="btn btn-danger mb-5" asp-controller="Order" asp-action="CheckOut">Check Out</a>
</div>